<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtTenBanAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/backgroundDangNhap"
        />

    <ImageView
        android:id="@+id/imBanAn"
        android:layout_width="@dimen/size100dp"
        android:layout_height="@dimen/size100dp"
        android:src="@drawable/maxresdefault"
        />

    <TextView
        android:id="@+id/imGoiMon"
        android:text="Gọi món ăn"
        android:textSize="18dp"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_margin="2dp"

        />
    <TextView
        android:id="@+id/imThanhToan"
        android:text="Thanh toán"
        android:textSize="18dp"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_margin="2dp"
        />

    <TextView
        android:id="@+id/imAnButton"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:gravity="center"
        android:text="Hủy"
        android:textSize="18dp"
        android:textColor="@color/colorPrimary"
        android:layout_margin="2dp"
         />


</LinearLayout>